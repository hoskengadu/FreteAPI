# Development Environment Variables
# Copy this file to terraform.tfvars and set your values

# Cloud Deployment Selection
deploy_to_aws   = true
deploy_to_azure = false
deploy_to_gcp   = false

# AWS Configuration
aws_region = "us-east-1"

# Azure Configuration (uncomment if deploying to Azure)
# azure_location = "East US"

# GCP Configuration (uncomment if deploying to GCP)
# gcp_project_id = "your-gcp-project-id"
# gcp_region     = "us-central1"

# Database Configuration
database_name     = "freteapi"
database_username = "freteapi"
database_password = "YourStrongPassword123!"

# Application Configuration
api_image    = "freteapi:latest"
api_version  = "v1.0.0"
run_migrations = true