							"raw": "{{baseUrl}}/api/v1/profissionais/proximos?latitude=-23.5505&longitude=-46.6333&dataHora=2024-01-15T10:00:00&duracaoMinutos=120",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
